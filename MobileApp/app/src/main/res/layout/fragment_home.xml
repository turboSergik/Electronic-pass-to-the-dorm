<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

    <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/scan_qr_button"
            app:layout_constraintStart_toStartOf="@+id/scan_qr_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintVertical_bias="0.247" app:layout_constraintTop_toBottomOf="@+id/scan_qr_button"/>
    <ImageButton
            android:src="@drawable/qr_3"
            android:layout_width="249dp"
            android:layout_height="246dp" android:id="@+id/scan_qr_button"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.453"/>
</androidx.constraintlayout.widget.ConstraintLayout>